---
const { title, description, category, categoryColor, icon } = Astro.props;
---

<div
  class="bg-gray-900 rounded-lg shadow-md p-6 max-w-xs w-full flex flex-col justify-between"
>
  <div class="flex items-center gap-3 mb-4">
    <img src={icon} alt={`${title} icon`} class="w-10 h-10 object-contain" />
    <div>
      <h3 class="text-lg font-semibold text-white">{title}</h3>
      <span
        class={`inline-block mt-1 text-xs font-semibold px-3 py-1 rounded-full ${categoryColor} text-white`}
      >
        {category}
      </span>
    </div>
  </div>
  <p class="text-gray-400 mb-6 text-sm">{description}</p>
  <button
    class="bg-blue-600 hover:bg-blue-700 text-white rounded-md py-2 text-sm font-semibold transition"
  >
    Explorar Comandos
  </button>
</div>
