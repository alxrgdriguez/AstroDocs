---
const { title, description, category, categoryColor, icon } = Astro.props;
---

<article
  class="category-card bg-gray-800 text-white rounded-lg p-4 shadow-md transition hover:shadow-xl"
  data-title={title}
  data-category={category}
>
  <div class="flex items-center gap-3 mb-3">
    <img src={icon} alt={title} class="h-8 w-8" />
    <h2 class="font-bold text-lg">{title}</h2>
  </div>
  <p class="text-gray-300 text-sm mb-3">{description}</p>
  <span class={`text-xs px-2 py-1 rounded ${categoryColor}`}>{category}</span>
</article>
